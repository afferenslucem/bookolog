<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <log4net>
    <root>
      <!-- ping -->
      <level value="DEBUG" />
      <appender-ref ref="RollingFile" />
      <appender-ref ref="Console" />
    </root>
    <logger name="AsanaIntegrator.ProjectScanner">
      <level value="DEBUG"></level>
    </logger>
    <logger name="ProjectManager.Manager">
      <level value="DEBUG"></level>
    </logger>
    <logger name="AsanaWebManager.Controllers.HookControllers.TaskEventController">
      <level value="DEBUG"></level>
    </logger>
    <logger name="AsanaWebManager.Controllers.HookControllers.ProjectEventController">
      <level value="DEBUG"></level>
    </logger>
    <logger name="TelegramConnector.TelegramBot">
      <level value="INFO"></level>
    </logger>
    <appender name="RollingFile" type="log4net.Appender.FileAppender">
      <file value="‪Integrator.log" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %logger %-5level - %message%newline" />
      </layout>
    </appender>
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionpattern value="%date [%thread] %logger %-5level - %message%newline" />
      </layout>
    </appender>
  </log4net>
</configuration>